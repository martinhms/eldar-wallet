<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    android:background="@drawable/gradient_card_background"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/gradient_card_background"
        android:padding="12dp">

        <TextView
            android:id="@+id/cardBankNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del banco"
            android:textColor="@color/default_card_color"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/cardManagmentNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:text="VISA"
            android:textColor="@color/default_card_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/cardTypeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:text="DÃ©bito"
            android:textColor="@color/default_card_color"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/cardNumberSelectedTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="**** **** **** 1234"
            android:textColor="@color/default_card_color"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>